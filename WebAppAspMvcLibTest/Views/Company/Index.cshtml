@{
    ViewData["Title"] = "Companies";
}

<div class="text-center">
<p> HELLO Company</p>

    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Company" asp-action="AddCompany">Add Company</a>
            </li>
        </ul>
    </div>

    <table class="table">
        <tr><th></th><th>ID</th><th>Title</th><th>Type</th></tr>
        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox" name="checkboxes"/> </td>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.GetType().ToString()</td>

            </tr>
        }
    </table>
   

</div>
